{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 10
  },
  "extends": [
    "airbnb-typescript",
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "plugin:solid/typescript",
    "prettier"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "plugins": ["@typescript-eslint/eslint-plugin", "prettier", "solid", "testing-library"],
  "rules": {
    "@typescript-eslint/dot-notation": "off",
    "@typescript-eslint/lines-between-class-members": "off",
    "@typescript-eslint/no-shadow": "off",
    "consistent-return": "off",
    "eqeqeq": ["error", "smart"],
    "import/no-extraneous-dependencies": "off", // couldn't figure out getting this to work due to monorepo
    "import/no-named-as-default": "off",
    "import/prefer-default-export": "off",
    "no-alert": "error",
    "no-console": "error",
    "no-shadow": "off",
    "operator-assignment": "off",
    "prettier/prettier": "error",
    "spaced-comment": "off"
  },
  "overrides": [
    {
      "files": ["apps/**/*/*.{js,ts,tsx}", "packages/**/*.{ts,tsx}"],
      "parserOptions": {
        "project": ["tsconfig.json"]
      }
    }
  ]
}
